<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/reportLayout">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <TextView
        android:id="@+id/thisisa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/thisisa" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id = "@+id/lostfound">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lostbutton"
            android:text="Lost Puppy Report"
            android:contentDescription="LOST"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/foundbutton"
            android:text="Found Puppy Report"
            android:contentDescription="FOUND"/>
    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:text="@string/enterinfo" />
    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id = "@+id/report_name"
        android:hint = "Name"/>
    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id = "@+id/report_breed"
        android:hint = "Breed"/>
    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id = "@+id/report_fur"
        android:hint = "Fur Color"/>
    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id = "@+id/report_eye"
        android:hint = "Eye Color"/>

    <TextView
        android:text="@string/lastlocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView3" />

    <fragment
        android:id="@+id/place_autocomplete_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lastdate"/>
    <DatePicker
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:calendarViewShown="false"
        android:id="@+id/datePicker2" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id = "@+id/sex">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id = "@+id/male"
            android:text="Male"
            android:contentDescription="Male"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id = "@+id/female"
            android:text="Female"
            android:contentDescription="Female"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id = "@+id/unknown"
            android:contentDescription="Unknown"
            android:text="Unknown"/>
    </RadioGroup>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id = "@+id/submit"
                android:text = "Submit"
                android:onClick="submit" />
        </LinearLayout>
</ScrollView>

</LinearLayout>